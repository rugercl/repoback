extends layouts/index.pug

block vista
    style.
        .table td, .table th {
            vertical-align: middle;
        }
        h1 {
            color: blue;
        }
        hr {
            background-color: #ddd;
        }
        .jumbotron {
            min-height: 100vh;
        }
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
            span.navbar-toggler-icon  
            .collapse.navbar-collapse(id='navbarSupportedContent')
        ul.navbar-nav.mr-auto
            li.nav-item.active
            a.nav-link(href='index.html') Registrar Productos
            li.nav-item
            a.nav-link(href='/productos') Listar Productos

    div(class="jumbotron")
        h1='Vista de Productos'
        br
        if hayProductos
            div(class="table-responsive")
                table(class="table table-dark")
                    tr
                        th='Nombre'
                        th='Precio'
                        th='Foto'
                        each producto in productos
                            tr
                                td=producto.libro
                                td=producto.precio
                                td
                                    img(width="50" src=producto.url alt="not found")
        else
            h3(class="alert alert-warning")='Libro no encontrado'
        br
        a(href="/" type="button" class="btn btn-primary")='Cargar un nuevo Libro'